      <div class="form-group">
        <label>Which City?</label>
        <input type="text" class="form-control" id="inputLocation" placeholder="Specify city" name="user[city]">
      </div>      

      <button type="submit" class="btn btn-primary">Search</button>

      <%end%>  
    </div>

  </div>
</div>
