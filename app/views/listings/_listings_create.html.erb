<div class="login-form">
  <div class="container">   
    <div class="login-form">
      <div class="main-div">
        <div class="panel">

          <h2>Create a new listing</h2>           

        </div>
        
        <%= form_for :user, url: listings_create_path, id: "listings", class: "listings" do |form| %>

        <div class="form-group">
          <label>Which Country?</label>
          <input type="text" class="form-control" id="inputLocation" placeholder="Specify country" name="user[country]">
        </div>

        <div class="form-group">
          <label>Which City?</label>
          <input type="text" class="form-control" id="inputLocation" placeholder="Specify city" name="user[city]">
        </div>      

        <button type="submit" class="btn btn-primary">Search</button>

        <%end%>  
      </div>

    </div>
  </div>
</div>




