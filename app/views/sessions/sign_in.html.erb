<!-- Sign in form -->
<div class="login-form">
   <div class="container">   
      <div class="login-form">
         <div class="main-div">         

            <div class="panel">
               <h2>AirBnB - Sign in</h2>
               <!-- Login with google -->         
               <%= link_to "Sign in with Google +", "/auth/google_oauth2", class: "btn btn-danger btn-gplus btn-lg" %>  
            </div>

            <div id="registrationBox" class="register">
               <%= render partial: '/users/register' %>
            </div>   

            <div id="loginBox" class="login">
               <%= render partial: '/sessions/login' %>
            </div>

            <a href="#" style="margin-top: 5%;" onclick="registration_form_display()">Register</a>

         </div>

      </div>
   </div>
</div>





