<div class="login-form">
 <div class="container">   
  <div class="login-form">
   <div class="main-div">
    <div class="panel">

      <h2>AirBnB - Sign up</h2>

      <!-- Login with google -->
      <form method="post" action="/login">
        <button type="submit" class="btn btn-danger btn-gplus btn-lg"><i class="fa fa-google-plus pr-1"></i> 
          <%= link_to "Sign up with Google +", "/auth/google_oauth2" %>          
        </button>               
      </form>

    </div>

    <%= form_for :session, url: session_path, id: "clearance", class: "sign-in" do |form| %>

    <div class="form-group email-signup">
      <input type="email" class="form-control" id="inputEmail" placeholder="Email Address" name="session[email]">
    </div>

    <div class="form-group">
      <input type="text" class="form-control" id="inputFname" placeholder="First Name" name="session[fname]">
    </div>

    <div class="form-group">
      <input type="text" class="form-control" id="inputLname" placeholder="Family Name" name="session[lname]">
    </div>

    <div class="form-group">
      <input type="date" class="form-control" id="inputBirthdate" placeholder="Date of birth" name="session[birthdate]">
    </div>

    <div class="form-group">
      <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="session[password]">
    </div>

    <button type="submit" class="btn btn-primary">Register</button>

    <%end%>  

  </div>
</div>
</div>
</div>








