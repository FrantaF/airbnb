<!DOCTYPE html>
<html>
<head>
  <title>Airbnb</title>
  <%= csrf_meta_tags %>

  <%= favicon_link_tag 'logo.png' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag    'listings', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">    

    <%= link_to image_tag('logo.png', :class => "navbar-img ml-3"), "/listings_search_box" %> 

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <% if signed_in? %>
    <form class="form-inline my-2 my-lg-0 ml-3">
     <input class="form-control mr-sm-2" type="search" placeholder="Your ideal place ..." aria-label="Search">
     <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
   </form>
   <%end%> 
   
   <div class="collapse navbar-collapse" id="navbarSupportedContent">

    <ul class="navbar-nav ml-auto">
      <% if signed_in? %>
      
      <% if current_user.role == "member" %>
      <li class="nav-item mr-3">
        <%= button_to 'Become Host', become_host_path, method: :post, :class => 'btn btn-default' %>
      </li>

      <% elsif current_user.role == "host" %>
      <li class="nav-item mr-3">
        <%= button_to 'Create new listing', become_host_path, method: :post, :class => 'btn btn-default' %>
      </li>

      <li class="nav-item mr-3">
        <%= button_to 'Your Listings', user_listings_path, method: :post, :class => 'btn btn-default' %>
      </li>
      <% end %>

      <li class="nav-item mr-3">
        <%= button_to 'Profile', user_profile_path(current_user.id), method: :post, :class => 'btn btn-default'%>           
      </li>    

      <li class="nav-item">
       <%= button_to 'Sign out', custom_sign_out_path, method: :delete, :class => 'btn btn-default'%>    
       <%end%> 
     </li>     
   </ul>

 </div>
</nav>

<!-- Background pic -->
<div class="background-picture">


  <%= yield %>


</div>
</body>
</html>
